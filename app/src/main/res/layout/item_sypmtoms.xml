<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:minHeight="250dp"
        app:cardElevation="3dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.LocationButton">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_item_sysmptoms"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Theme.MaterialComponents.DayNight.NoActionBar.Bridge"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txt_item_sysptoms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:tint="?attr/colorOnSurface"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                 />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>